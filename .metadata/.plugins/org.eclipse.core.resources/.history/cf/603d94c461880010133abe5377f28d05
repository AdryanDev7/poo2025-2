package exemplos;

public class ParesImpares {

	public static void main(String[] args) {
		
		int numero = 30, i, par, impar;
	
		for(i=0; i<=30; i++) {
			if(numero % 2 == 0) {
				par++;
			} else
				impar++;
		}
		System.out.println("Total de pares: ", par);
		System.out.println("Total de impares", impar);
	}
}
