package exemplos;

public class Pessoa {

	private	String nome;
	private	double peso, altura;

	//m√©todo para entrada de dados
	public void setNome(String nome) {
		this.nome = nome;
	}
	
	public String getNome() {
		return nome;
	}
	
	
	// ENCAPSULAMENTO
	private double IMC() {
		
		return peso / (altura * altura);
	}

	public String resultado() {
		
		if (IMC() < 18.5) {
			return "Abaixo do peso";
		} else if (IMC() <= 24.9) {
			return "Peso ideal";
		} else {
			return "Acima do peso";
		}
	}

}
