package exemplos;

public class ParesImpares {

	public static void main(String[] args) {
		
		int numero = 30, i, nPar=0, nImpar=0;
	
		for(i=0; i<30; i++) {
			if(numero % 2 == 0) {
				nPar = numero;
				System.out.println(nPar);
			} else
				nImpar = numero;
				System.out.println(nImpar);
		}
	}
}
