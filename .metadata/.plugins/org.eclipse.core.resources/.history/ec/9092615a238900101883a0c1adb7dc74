package exemplos;

public class Pessoa {

	String nome;
	double peso, altura;

	// ENCAPSULAMENTO
	private double IMC() {
		
		return peso / (altura * altura);
	}

	public String resultado() {
		
		if (IMC() < 18.5) {
			return "Abaixo do peso";
		} else if (IMC() <= 24.9) {
			return "Peso ideal";
		} else {
			return "Acima do peso";
		}
	}

}
